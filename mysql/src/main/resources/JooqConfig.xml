<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration>
    <jdbc>
        <driver>com.mysql.cj.jdbc.Driver</driver>
        <url>jdbc:mysql://${host}:${port}/asimov_server?characterEncoding=utf-8</url>
        <user>${user}</user>
        <password>${password}</password>
    </jdbc>

    <generator>
        <database>
            <name>org.jooq.meta.mysql.MySQLDatabase</name>
            <includes>.*</includes>
            <inputSchema>asimov_server</inputSchema>
        </database>
        <generate>
            <!--generate dao and pojo-->
            <!--<daos>true</daos>-->
            <pojos>true</pojos>
        </generate>
        <target>
            <packageName>network.asimov.mysql.database</packageName>
            <directory>src/main/java</directory>
        </target>
    </generator>
</configuration>